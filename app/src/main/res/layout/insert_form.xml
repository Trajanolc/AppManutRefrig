        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            tools:ignore="MissingConstraints">


               <TextView
                    android:id="@+id/txtSubTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Insira as informações baixo"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@drawable/layout_bf"/>
       <!--        selecione a instalaçao-->
              <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp"
                  android:layout_margin="5dp"
                    android:background="@drawable/layout_bf"
                    tools:ignore="MissingConstraints">
                    <TextView
                        android:id="@+id/txtSelectInstalacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Selecione a instalaçao:"
                        android:layout_gravity="start"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:padding="7dp"/>

                    <Spinner
                        android:id="@+id/instalacao"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:drawable/btn_dropdown"
                        android:layout_gravity="start"
                        android:padding="10dp"
                        android:spinnerMode="dropdown"

                        />

                </LinearLayout>

        <!--        Selecione o local-->
              <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_bf"
                    tools:ignore="MissingConstraints">
                    <TextView
                        android:id="@+id/form2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selecione o local:"
                        android:layout_gravity="start"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:padding="7dp"/>

                    <Spinner
                        android:id="@+id/local"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:drawable/btn_dropdown"
                        android:layout_gravity="start"
                        android:padding="10dp"
                        android:spinnerMode="dropdown"/>

                </LinearLayout>

        <!--        Equipamento-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_bf"
                    tools:ignore="MissingConstraints">
                    <TextView
                        android:id="@+id/form3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Equipamento:"
                        android:layout_gravity="start"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:padding="7dp"/>

                    <Spinner
                        android:id="@+id/equipamento"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:drawable/btn_dropdown"
                        android:layout_gravity="start"
                        android:padding="10dp"
                        android:spinnerMode="dropdown"/>

                </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Insira o codigo do chamado (caso exista)"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/layout_topbf"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"

            />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/layout_bf">
                    <EditText
                        android:id="@+id/chamado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:background="#ffffff"
                        android:text="PAT" />


                </LinearLayout>

                <!--      seleção do tipo de manutenção  -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tipo de Manutenção"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/layout_topbf"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"

                    />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="-5dp"
                    android:paddingTop="-5dp"
                    android:background="@drawable/layout_bf"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        tools:ignore="MissingConstraints">
                        <TextView
                            android:id="@+id/txtSensitiva"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Manutenção sensitiva"
                            android:layout_gravity="start"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:padding="7dp"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchSensitiva"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp"
                        android:layout_marginHorizontal="5dp"
                        tools:ignore="MissingConstraints">
                        <TextView
                            android:id="@+id/txtPreventiva"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Manutenção preventiva"
                            android:layout_gravity="start"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:padding="7dp"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchPreventiva"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp"
                        android:layout_marginHorizontal="5dp"

                        tools:ignore="MissingConstraints">
                        <TextView
                            android:id="@+id/txtCorretiva"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Manutenção corretiva"
                            android:layout_gravity="start"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:padding="7dp"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchCorretiva"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>

                <!--      Seleção do serviços  -->
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Serviço"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/layout_topbf"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"

                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="-5dp"
                    android:paddingTop="-5dp"
                    android:background="@drawable/layout_bf"
                    tools:ignore="MissingConstraints">

    <!--            Gas-->


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        tools:ignore="MissingConstraints">
                        <TextView
                            android:id="@+id/txtRecargaDeGas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Recarga de Gás"
                            android:layout_gravity="start"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:padding="7dp"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchRecargaDeGas"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp"
                        android:layout_marginHorizontal="5dp"
                        tools:ignore="MissingConstraints">
                        <TextView
                            android:id="@+id/txtLimpezaFiltros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Limpeza dos Filtros"
                            android:layout_gravity="start"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:padding="7dp"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchLimpezaFiltros"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp"
                        android:layout_marginHorizontal="5dp"

                        tools:ignore="MissingConstraints">
                        <TextView
                            android:id="@+id/txtLimpezaQuimico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Limpeza Geral com Quimico"
                            android:layout_gravity="start"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:padding="7dp"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchLimpezaQuimico"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp"
                        android:layout_marginHorizontal="5dp"
                        tools:ignore="MissingConstraints">

                        <TextView
                            android:id="@+id/txtVentilador"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:padding="7dp"
                            android:text="Troca de Ventilador"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />


                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchVentilador"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp"
                        android:layout_marginHorizontal="5dp"

                        tools:ignore="MissingConstraints">
                        <TextView
                            android:id="@+id/txtFusivel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Troca de Fusível"
                            android:layout_gravity="start"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:padding="7dp"/>
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchFusivel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp"
                        android:layout_marginHorizontal="5dp"

                        tools:ignore="MissingConstraints">
                        <TextView
                            android:id="@+id/txtCapacitor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Troca de Capacitor"
                            android:layout_gravity="start"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:padding="7dp"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchCapacitor"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>



                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp"
                        android:layout_marginHorizontal="5dp"

                        tools:ignore="MissingConstraints">
                        <TextView
                            android:id="@+id/txtRele"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Troca de Relé"
                            android:layout_gravity="start"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:padding="7dp"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchRele"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Observações"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/layout_topbf"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/layout_bf">



                <EditText
                    android:id="@+id/OBS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:text=""
                    android:lines="3"/>
            </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Insira as imagens abaixo"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/layout_topbf"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"

                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/layout_bf"
                        android:layout_marginHorizontal="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:layout_marginVertical="10dp"
                            android:text="Antes"
                            />
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imgAntes"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintDimensionRatio="1:1"
                                app:srcCompat="@android:drawable/ic_menu_add"
                                android:background="#000000"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/layout_bf"
                        android:layout_marginHorizontal="5dp"
                        android:paddingBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:layout_marginVertical="10dp"
                            android:text="Depois"
                            />
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imgDepois"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintDimensionRatio="1:1"
                                app:srcCompat="@android:drawable/ic_menu_add"
                                android:background="#000000"
                                android:layout_gravity="center"
                                android:layout_margin="15dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>



                </LinearLayout>







            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.bottomappbar.BottomAppBar
                    android:id="@+id/bottomAppBar"
                    style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#27477B">

                    <Button
                        android:id="@+id/returnHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/retornar"
                        android:textColor="#000000"
                        android:backgroundTint="#FF0000"
                        android:layout_margin="7dp"
                        />
                    <Button
                        android:id="@+id/finalizar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirmar"
                        android:textColor="#000000"
                        android:layout_margin="7dp"
                        android:backgroundTint="#EA811F"/>

                </com.google.android.material.bottomappbar.BottomAppBar>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>